@model TimesheetViewModel
@{
    ViewData["Title"] = "Add a timesheet.";
}

<form asp-controller="Timesheets" asp-action="Edit" method="post" enctype="application/x-www-form-urlencoded">
   <div class="text-danger" asp-validation-summary="All"></div>

   <div class="form-group">
        <label asp-for="ActiveTimesheet.Date">Date: </label>
        <input type="text" asp-for="ActiveTimesheet.Date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ActiveTimesheet.ProjectName">Project Name: </label>
        <input type="text" asp-for="ActiveTimesheet.ProjectName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ActiveTimesheet.Hours">Hours: </label>
        <input type="text" asp-for="ActiveTimesheet.Hours" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

    <a asp-controller="Timesheets" asp-action="Items" class="btn btn-primary">Cancel</a>
</form>

